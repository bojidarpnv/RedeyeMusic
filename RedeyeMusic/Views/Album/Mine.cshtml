@model List<AlbumSelectViewModel>

@{
    ViewData["Title"] = "My Albums";
}

<div class="container mt-4">
    <h2 class="mb-3">My Albums</h2>

    <div class="row">
        @foreach (var album in Model)
        {
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Details", "Album", new { id = album.Id })">
                    <div class="card album-card">
                        <img src="@album.ImageUrl" class="card-img-top" alt="@album.Name">
                        <div class="card-body">
                            <h5 class="card-title">@album.Name</h5>
                            <p class="card-text">@album.Description</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        
        $(document).ready(function () {
            $(".album-card").click(function () {
                
                var albumDetailsUrl = $(this).find("a").attr("href");

                
                window.location.href = albumDetailsUrl;
            });
        });
    </script>
}