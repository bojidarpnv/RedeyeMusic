@model SongDetailsViewModel
@using RedeyeMusic.Web.Infrastructure.Extensions;
@{
    ViewData["Title"] = "Song Details";
    int seconds = Model.Duration % 60;
    int minutes = Model.Duration / 60;
    var span = new TimeSpan(0, 0, seconds);
    var durationInMinutes = string.Format("{0}:{1:00}", (int)span.TotalMinutes, span.Seconds);
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title">
        </div>
        <div class="col-md-6">
            <h2 class="mb-3">@Model.Title</h2>
            <p class="">@Model.ArtistName</p>
            <p>@Model.Lyrics</p>
            <p>Duration: @durationInMinutes</p>
            <p>Listen Count: @Model.ListenCount</p>
            <div>
                <a asp-action="Edit" asp-controller="Song" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-controller="Song" class="btn btn-danger">Delete</a>
                <a asp-action="Index" asp-controller="Song" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
    
    @if (Model.Artist != null)
    {
        <hr class="mt-4">
        <div class="row mt-4">
            <div class="col-md-6">
                <h3>Artist Information</h3>
                <div class="d-flex">
                    <div class="pr-3">
                        <!-- Uncomment the line below if you want to show the artist image -->
                        @*<img src="@Model.Artist.ImageUrl" class="img-fluid rounded" alt="@Model.Artist.Name">*@
                    </div>
                    <div>
                        <p class="">@Model.Artist.Name</p>
                        <!-- Add other artist info here if needed -->
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <h3>Albums</h3>
                <ul>
                    @foreach (var album in Model.Artist.Albums)
                    {
                        <li>@album.Name - @album.Description</li>
                    }
                </ul>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}
