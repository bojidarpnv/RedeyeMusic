@model SongDetailsViewModel
@using RedeyeMusic.Web.Infrastructure.Extensions;
@{
    ViewData["Title"] = "Song Details";
    int seconds = Model.Duration % 60;
    int minutes = Model.Duration / 60;
    var span = new TimeSpan(0, 0, seconds);
    var durationInMinutes = string.Format("{0}:{1:00}", (int)span.TotalMinutes, span.Seconds);
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title">
        </div>
        <div class="col-md-6">
            <h2 class="mb-3">@Model.Title</h2>
            <p class="">@Model.ArtistName</p>
            <p>@Model.Lyrics</p>
            <p>Duration: @durationInMinutes</p>
            <p>Listen Count: @Model.ListenCount</p>
            <p>AlbumName: @Model.AlbumName</p>
            <div>
                <a asp-action="Edit" asp-controller="Song" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-controller="Song" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                <a asp-action="Index" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
    
    @if (Model.Artist != null)
    {
        <hr class="mt-4">
        <div class="row mt-4">
            <div class="col-md-6">
                <h3>Artist Information</h3>
                <div class="d-flex">
                    <div>
                        <p class="">@Model.Artist.Name</p>
                     </div>
                </div>
            </div>

            <div class="col-md-6">
                <h3>Albums</h3>
                <div class="row">
                    @foreach (var album in Model.Artist.Albums)
                    {
                        <div class="col-md-4 mb-3">
                            <a href="@Url.Action("Details", "Album", new { id = album.Id })" class="btn btn-light">
                                <img src="@album.ImageUrl" class="img-fluid rounded" alt="@album.Name">
                                <div class="mt-2">@album.Name</div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

