@model AllSongsSearchedModel

@{
    ViewData["Title"] = "Search Results";
}


@if (Model.SongsByTitle.Any() || Model.SongsByGenre.Any() || Model.SongsByArtist.Any() || Model.SongsByLyrics.Any())
{
    <div class="homeview text-white pt-2">
        <ul class="homeview-nav nav m-4 nav-pills mb-3" id="pills-tab" role="tablist">
            @if (Model.SongsByTitle.Any())
            {
                <li class="nav-item" role="presentation">
                    <button class="text-white nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">By Title</button>
                </li>
            }

            @if (Model.SongsByGenre.Any())
            {
                <li class="nav-item" role="presentation">
                    <button class="text-white nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">By Genre</button>
                </li>
            }

            @if (Model.SongsByArtist.Any())
            {
                <li class="nav-item" role="presentation">
                    <button class="text-white nav-link" id="pills-artist-tab" data-bs-toggle="pill" data-bs-target="#pills-artist" type="button" role="tab" aria-controls="pills-artist" aria-selected="false">By Artist</button>
                </li>
            }

            @if (Model.SongsByLyrics.Any())
            {
                <li class="nav-item" role="presentation">
                    <button class="text-white nav-link" id="pills-lyrics-tab" data-bs-toggle="pill" data-bs-target="#pills-lyrics" type="button" role="tab" aria-controls="pills-lyrics" aria-selected="false">By Lyrics</button>
                </li>
            }
        </ul>

        <div class="tab-content" id="pills-tabContent">
            @if (Model.SongsByTitle.Any())
            {<div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
                    @foreach (var song in Model.SongsByTitle)
                    {
                        int seconds = song.Duration % 60;
                        int minutes = song.Duration / 60;
                        var span = new TimeSpan(0, 0, seconds);
                        var durationInMinutes = string.Format("{0}:{1:00}", (int)span.TotalMinutes, span.Seconds);
                        string songDuration = minutes + "+" + seconds;
                        <div class="row">
                            <div class="col-md-6">
                                <div class="white song m-2 ms-4 row align-items-center song-item" data-song-id="@song.Id" data-src="@Url.Content(song.Mp3FilePath)">
                                    <div class="col d-flex">
                                        <img class="rounded m-1" src="@song.ImageUrl" style="width:50px;height:50px; object-fit:cover;">
                                        <div class="white ms-1">
                                            <div class="white">@song.Title</div>
                                            <div class="smallText"><small class="white truncate-lyrics">@song.Lyrics</small></div>
                                        </div>
                                    </div>
                                    <div class="col-2 text-decoration-none">@durationInMinutes<i class="bi bi-play ml-2"></i></div>
                                    <small class="white col-2">
                                        <i class="bi bi-ear"></i>
                                        <span class="listen-count-placeholder"></span>
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="row justify-content-center pt-3 mb-2">
                                    <div class="col me-lg-5">
                                        <a asp-action="Details" asp-controller="Song" asp-route-id="@song.Id" class="btn btn-danger">Details</a>
                                    </div>
                                </div>
                            </div>
                       </div>
                        
                    }
                </div>
            }

            @if (Model.SongsByGenre.Any())
            {
                

                <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
