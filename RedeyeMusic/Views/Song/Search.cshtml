            }

            @if (Model.SongsByLyrics.Any())
            {
                
                <div class="tab-pane fade" id="pills-lyrics" role="tabpanel" aria-labelledby="pills-lyrics-tab" tabindex="0">
                    @foreach (var song in Model.SongsByLyrics)
