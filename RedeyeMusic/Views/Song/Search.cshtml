                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}



else
{
    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">No Results Found</h1>
        <p class="lead">
            There are no songs matching your search.
        </p>
    </div>
}

@section Scripts {
    
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/getListenCount.js"></script>
    <script>
        $(document).ready(function () {
            var activated = false;

            function activateTab(tabId) {
                if (!activated) {
                    $(tabId).tab('show');
                    activated = true;
                }
            }

        @if (Model.SongsByTitle.Any())
        {
            <text>activateTab('#pills-home-tab'); </text>
        }

        @if (Model.SongsByGenre.Any())
        {
            <text>activateTab('#pills-profile-tab'); </text>
        }

        @if (Model.SongsByArtist.Any())
        {
            <text>activateTab('#pills-artist-tab'); </text>
        }

        @if (Model.SongsByLyrics.Any())
        {
            <text>activateTab('#pills-lyrics-tab'); </text>
        }
                });
    </script>
}








